<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<link rel="stylesheet" href="/css/profissional/historicoServicos.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.css">

<body>

    <%- include('../partials/header')%>

    <main class="mb-5">

        <details>
            <summary><strong>FILTRO</strong></summary>

            <form action="/perfil/profissional/historico" class="form-checkbox ml-2" method="POST">
                <input value="1"  class="btn-check" type="radio" id="orcamentar" name="statusServicoFromBody">    
                <label class="btn btn-outline-info"  for="orcamentar"> A Orçamentar
                </label>
                <input value="2"  class="btn-check" type="radio" id="executar" name="statusServicoFromBody">
                <label class="btn btn-outline-info" for="executar"> Aguardando aceite
                </label>

                <input value="3"  class="btn-check" type="radio" id="aceite" name="statusServicoFromBody">
                <label class="btn btn-outline-info" for="aceite"> A Executar
                </label>

                <input value="4"  class="btn-check" type="radio" id="finalizado" name="statusServicoFromBody">
                <label class="btn btn-outline-info" for="finalizado"> Finalizados
                </label>

                <input value="5"  class="btn-check" type="radio" id="cancelado" name="statusServicoFromBody">
                <label class="btn btn-outline-info" for="cancelado"> Cancelados
                </label>
                
                <button type="submit" class="btn btn-outline-success">Buscar</button>
            </form>
        </details>
        <% if(dadosServicos.length > 0){ %>

            <div class="glider-contain">

            <div class="glider cards d-flex justify-content-center">
                <% dadosServicos.forEach(dadoServico => { %>


                <div class="card m-3 p-1" style="width: 18rem; height: auto;">
                    <img src="/img/avatarPerfilCliente/<%= dadoServico.cliente.avatar %>" alt="">
                    
                    <div class="card-body">
                        <h5 class="card-title"><%= `${dadoServico.cliente.nome} ${dadoServico.cliente.sobrenome}` %> </h5>
                        <h5 class="date-br text-h4 d-flex align-self-center"><%= dadoServico.dataServico %> </h5>

                        <p class="card-text">Desc: <%= dadoServico.descricaoServico %></p>
                        <p> R$ <%= dadoServico.precoServico %> </p>

                        <% if(dadoServico.situacaoServicoId !== 5){ %>

                        <p class="cepsToApi"><%= dadoServico.cliente.cep %></p>
                        <p> Número: <%= dadoServico.cliente.numero %> </p>
                        
                        <% } %>

                    <% if (dadoServico.situacaoServicoId == 1){ %>
                    
                        <details>
                            <summary>Orçamentar</summary>
                            <form action="/servicos/<%= dadoServico.id %>/orcamentar?_method=PUT" method="POST">
                                <label for=""> Insira o valor previsto para o serviço
                                    <input type="number" step="0.01" name="precoServico">
                                </label>
                                <button class="btn btn-primary" type="submit">Enviar Orçamento</button>
                            </form>
                        </details>

                        <details>
                            <summary>Cancelar</summary>
                            <form action="/servicos/<%= dadoServico.id %>/cancelar?_method=PUT" method="POST">
                                <label for="" class="col-md-12"> Motivo do Cancelamento </label>
                                <textarea name="descricaoServico" class="col-md-12"></textarea>
                                <button class="btn btn-danger col-md-10" type="submit">Cancelar</button>
                            </form>
                        </details>
                    <% } %>
                    <% if (dadoServico.situacaoServicoId == 3) { %>
                        <form action="/servicos/<%= dadoServico.id %>/finalizar?_method=PUT" method="POST">
                            <button class="btn btn-success" type="submit">Finalizado</button>
                        </form>
                    <% } %> 
                </div>
            </div>
            <% }) %>
        </div>
                    <button aria-label="Previous" class="glider-prev">«</button>
                    <button aria-label="Next" class="glider-next">»</button>
                    <div role="tablist" class="dots"></div>
    </div>

        <% } else{ %>
            <div class="h1-sem-estado">
                <h1> NÃO HÁ SERVIÇOS NESSA SITUAÇÃO </h1>
            </div>
        <% } %> 
    </main>
    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/historicoServicoProf.js"></script> 
    <script src="/js/dataServicoProf.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.js"></script>
    <script src="/js/glider.js"></script> 
</body>

</html>