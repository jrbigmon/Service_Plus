<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<link rel="stylesheet" href="/css/profissional/listaProfissionais.css">

<body>
    
    <%- include('../partials/header') %>

    <main class="main-home">
        <details>
            <summary><strong>FILTRO</strong></summary>

            <p>
                <form class="form-checkbox" action="/perfil/cliente/profissionais" method="POST">
                    <div>

                        <input name="order" value="ASC" type="radio" class="btn-check" id="Eletricista" autocomplete="off">
                        <label class="btn btn-outline-info" for="Eletricista">Crescente</label>
    
                        <input name="order" value="DESC" type="radio" class="btn-check" id="Encanador" autocomplete="off">
                        <label class="btn btn-outline-info" for="Encanador">Decrescente</label>

                        <% for(let i = 0; i< area.length; i++) {%>
                            <input name="area" value="<%= area[i]%>" hidden>
                        <% } %> 
                        
                    </div>
                    <button type="submit" class="btn btn-outline-success align-middle">Buscar</button>
            </p>

          </details>
        
        <div class="cards container d-flex justify-content-around align-content-around flex-wrap">
            <% if(profissionais != 'undefined') { %>
                <% profissionais.forEach(profissional => { %>

                        <div class="card">
                            <img src="/img/avatarPerfilProfissional/<%= profissional.avatar %> " class="card-img-top d-flex align-self-center" style="width: 15rem; height: 15rem">
                              <h4 class="text d-flex align-self-center"><%= `${profissional.nome} ${profissional.sobrenome}`  %> </h5>
                              <h6 class="text d-flex align-self-center"><%= `${profissional.area.nome}`  %> </h6>
                              <h6 class="text d-flex align-self-center"><%= profissional.descricao %> </h6>
                              <a href="/perfil/cliente/profissionais/<%=profissional.id%>/resumo" class="btn btn-outline-info d-flex align-self-center" style="width: 30%">PERFIL</a>
                            </div>
    
                <% }) %>
            <% } %>
        </div>
    </main> 

    <%- include('../partials/footer') %>

</body>
</html>